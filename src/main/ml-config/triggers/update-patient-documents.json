{
  "name": "update-patient-documents",
  "description": "Update patient documents and encounters that have already been ingested",
  "event": {
    "data-event": {
      "collection-scope": {
        "uri": "patient-raw"
      },
      "document-content": {
        "update-kind": "modify"
      },
      "when": "pre-commit"
    }
  },
  "module": "ext/triggers/update-patient-documents.xqy",
  "module-db": "%%MODULES_DATABASE%%",
  "module-root": "/",
  "enabled": true,
  "recursive": true,
  "task-priority": "normal"
}