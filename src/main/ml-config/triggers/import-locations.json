{
  "name": "import-locations",
  "description": "Add enrichment to newly ingested locations",
  "event": {
    "data-event": {
      "collection-scope": {
        "uri": "deploy-location"
      },
      "document-content": {
        "update-kind": "create"
      },
      "when": "post-commit"
    }
  },
  "module": "ext/triggers/create-location-triples.xqy",
  "module-db": "%%MODULES_DATABASE%%",
  "module-root": "/",
  "enabled": true,
  "recursive": true,
  "task-priority": "normal"
}