{
  "name": "import-visits",
  "description": "Enrich the visits with patient data",
  "event": {
    "data-event": {
      "collection-scope": {
        "uri": "visits"
      },
      "document-content": {
        "update-kind": "create"
      },
      "when": "post-commit"
    }
  },
  "module": "ext/triggers/enrich-visits.xqy",
  "module-db": "%%MODULES_DATABASE%%",
  "module-root": "/",
  "enabled": true,
  "recursive": true,
  "task-priority": "normal"
}